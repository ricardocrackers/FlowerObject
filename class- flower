class flower{
float d = 3;
float n = 2;
  
  float k = n / d;
  
void display(){
  beginShape();
  stroke(0,250,0);
  fill(250,0,0);
  strokeWeight(1);

 translate(width / 2, height / 2);
  for (float a = 0; a < TWO_PI * d; a += 0.01) {
    float r = 100 * cos(k * a);
    float x = r * cos(a);
    float y = r * sin(a);
    vertex(x, y);
  } 
  endShape(CLOSE);
}
}
